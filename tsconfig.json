{
  "compilerOptions": {
    "outDir": "./build",
    "module": "es2015",
    "target": "es2017",
    "moduleResolution": "node",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "./types/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.json"
  ]
}
